<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_largest"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/parentNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/text_orange"
            android:textSize="@dimen/font_size_mid" />

        <TextView
            android:id="@+id/ParentLocTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_smallest"
            android:layout_marginRight="@dimen/margin_smallest"
            android:text="Mom is at Home"
            android:textColor="@color/text_orange"
            android:textSize="@dimen/font_size_mid" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/text_orange"
            android:textSize="@dimen/font_size_mid"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_largest"
        android:background="@drawable/circular_image" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.MapFragment"
                android:layout_width="@dimen/size_circle_image"
                android:layout_height="@dimen/size_circle_image"
                android:layout_centerInParent="true" />

            <LinearLayout
                android:layout_width="@dimen/size_circle_image"
                android:layout_height="@dimen/size_circle_image"
                android:layout_centerInParent="true"
                android:background="@drawable/shape_circle"
                android:orientation="vertical" >
            </LinearLayout>
        </RelativeLayout>

        <com.touchKin.touchkinapp.custom.HoloCircularProgressBar
            android:id="@+id/holoCircularProgressBar"
            android:layout_width="@dimen/size_holo_circular_progressBar"
            android:layout_height="@dimen/size_holo_circular_progressBar"
            android:layout_centerInParent="true"
            app:stroke_width="@dimen/stroke_holo_circular_progress" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_normal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mom has left home"
            android:textColor="@color/text_orange"
            android:textSize="@dimen/font_size_mid" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:text="@string/kin_touch_duration"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/font_size_mid"  />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ago_text"
            android:textColor="@color/text_orange"
            android:textSize="@dimen/font_size_mid" />
    </LinearLayout>

</LinearLayout>