<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_largest"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/parentNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mom&apos;s activity is "
            android:textColor="@color/text_orange"
            android:textSize="@dimen/font_size_mid"/>

        <TextView
            android:id="@+id/ParentLocTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_smallest"
            android:text="very low"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/font_size_mid"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_smallest"
            android:text=""
            android:textColor="@color/text_orange"
            android:textSize="@dimen/font_size_mid" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_largest"
        android:background="@drawable/circular_image" >

        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="@dimen/size_circle_image"
            android:layout_height="@dimen/size_circle_image"
            android:layout_centerInParent="true"
            android:src="@drawable/activity" />

        <com.touchKin.touchkinapp.custom.HoloCircularProgressBar
            android:id="@+id/holoCircularProgressBar"
            android:layout_width="@dimen/size_holo_circular_progressBar"
            android:layout_height="@dimen/size_holo_circular_progressBar"
            android:layout_centerInParent="true"
            app:stroke_width="@dimen/stroke_holo_circular_progress"  />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/profile_pic"
            android:layout_centerHorizontal="true"
            android:paddingBottom="@dimen/margin_extra_large"
            android:layout_centerInParent="true"
            android:src="@drawable/steps" />

        <TextView
            android:id="@+id/add_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_top_step_dashboard_activity"
            android:text="@string/ten"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_mid" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_name"
            android:layout_centerHorizontal="true"
            android:text="Steps"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_mid"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_small"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="She has last active "
            android:textColor="@color/text_orange"
            android:textSize="@dimen/font_size_mid"  />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:text="@string/kin_touch_duration"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/font_size_mid"  />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ago_text"
            android:textColor="@color/text_orange"
            android:textSize="@dimen/font_size_mid"  />
    </LinearLayout>

</LinearLayout>