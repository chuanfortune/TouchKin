    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText"
        parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/color_text_toolbar</item>
    </style>

    <style name="ToolbarCustomTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/color_text_toolbar</item>
        <item name="android:textColorSecondary">@color/color_text_toolbar</item>
        <item name="actionMenuTextColor">@color/color_text_toolbar</item>
    </style>

